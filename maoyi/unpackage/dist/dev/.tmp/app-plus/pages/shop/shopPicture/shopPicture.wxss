page {
  background: #FFFFFF !important;
}
.shop_box {
  width: 96%;
  margin: 2% auto;
}
.shop_box .shopText {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 0 2%;
}
.shop_box .add_img {
    width: 140rpx;
    height: 140rpx;
}
.shop_box .add_img image {
      height: 100%;
}
.listbox {
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.listbox .row-img {
    width: 48%;
    margin: 1%;
    position: relative;
    height: 240rpx;
}
.listbox .row-img image {
      height: 100%;
}
.listbox .row-img .picture_text {
      position: absolute;
      bottom: 0;
      width: 100%;
      background: rgba(0, 0, 0, 0.4);
      color: #FFFFFF;
      text-align: center;
}
.listbox .row-add {
    width: 46%;
    margin: 1%;
    position: relative;
    height: 230rpx;
    line-height: 220rpx;
    text-align: center;
    font-size: 180rpx;
    border: 3px dashed #999;
    color: #999;
}
.yiny {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  height: 100vh;
  width: 100%;
}
.showActionSheet {
  width: 80%;
  z-index: 999;
  overflow: hidden;
  border-radius: 10rpx;
  position: fixed;
  bottom: 40%;
  left: 10%;
}
.showActionSheet .item {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #eee;
    text-align: center;
    background: #fff;
}
.showActionSheet .text {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 2%;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    text-align: left;
}
.showActionSheet .text input {
      border: 1px solid #999;
      width: 78%;
      padding: 10rpx 0 10rpx 10rpx;
}

