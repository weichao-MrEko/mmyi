.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  height: 80rpx;
  border-bottom: 1px #eee solid;
  background: #fff;
}
.nav .nav-color {
    color: #e84148;
}
.nav view {
    width: 25%;
    line-height: 80rpx;
    text-align: center;
}
.list-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 240rpx;
  width: 98%;
  margin: 0 auto;
  background: #fff;
  border-bottom: 1px solid #eee;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 15rpx 5rpx;
}
.list-box .listImg {
    width: 200rpx;
    height: 200rpx;
    margin: 0 20rpx;
}
.list-box .certer {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
    height: 100%;
}
.list-box .certer .title {
      padding: 10rpx 10rpx 10rpx 10rpx;
      font-size: 30rpx;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
}
.list-box .certer .state {
      color: #e84148;
      text-align: right;
      width: auto;
      height: auto;
      padding: 5rpx 25rpx;
      border: 1px solid #e84148;
      float: right;
      margin: 5rpx;
      border-radius: 50rpx;
}
.list-box .certer .bottom {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      font-size: 25rpx;
      height: auto;
}
.list-box .certer .bottom view {
        margin: 0 10rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
}
.list-box .certer .bottom .bottom_img {
        width: 25rpx;
        height: 25rpx;
        margin: 2rpx 6rpx 0 0;
}
.list-box .certer .bottom .bottom_img image {
          width: 100%;
          height: 100%;
}

