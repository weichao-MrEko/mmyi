.swiper-item {
  background: #FFFFFF;
  width: 90%;
  height: 85%;
  border-radius: 20rpx;
  margin: 2% auto;
}
.ratings {
  padding: 0 3%;
}
.comment {
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
}
.comment .user-info {
    width: 100%;
    height: 40rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
}
.comment .user-info .face {
      width: 40rpx;
      height: 40rpx;
      margin-right: 8rpx;
}
.comment .user-info .face image {
        width: 40rpx;
        height: 40rpx;
        border-radius: 100%;
}
.comment .user-info .username {
      font-size: 24rpx;
      color: #999;
}
.comment .text {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
    margin: 10rpx 0;
}
.comment .text .dateText {
      text-align: right;
      font-size: 24rpx;
}
.comment .text view:nth-child(1) {
      color: red;
      font-size: 25rpx;
}
.comment .content {
    margin-top: 10rpx;
    font-size: 26rpx;
}
page {
  background-color: #fff;
}
.row .list {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 3%;
  padding: 2% 0;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.row .list .user_img {
    width: 80rpx;
    height: 80rpx;
    margin: 10rpx;
}
.row .list .user_img image {
      height: 100%;
}
.row .remark {
  margin: 3%;
  height: auto;
}
.Successful {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  bottom: 15%;
  right: 10%;
}
.Successful image {
    height: 100%;
}
.Successful_min {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 15%;
  right: 2%;
}
.Successful_min image {
    height: 100%;
}
.exit {
  position: absolute;
  top: 0%;
  right: 1%;
  text-align: center;
  font-size: 40rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 45rpx;
  background: #e84148;
  color: #FFFFFF;
  border-radius: 100%;
}
.footer {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 90%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  margin: auto;
}
.footer .left {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    width: 50%;
}
.footer .btn {
    border: 1px solid #e84148;
    color: #fff;
    background: #e84148;
    margin: 0 2%;
    padding: 10rpx 20rpx;
}
